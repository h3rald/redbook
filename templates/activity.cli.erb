<%
padding = ' '*Math.log10(@total).round
tracking = ""
case @entry.activity.tracking
when 'started'
	tracking = ">"
when 'paused'
	tracking = "="
when 'completed'
	tracking = "#"
else
	tracking = "*"
end
icon = @entry.activity.foreground.blank? ? "[#{tracking}]" : "(#{tracking})"
_start = @entry.activity.start.textualize
_end = @entry.activity.end.textualize
tracked_duration = (@entry.activity.tracked_duration)? @entry.activity.tracked_duration.in_minutes : "n/a"
duration = (@entry.activity.duration) ? @entry.activity.duration.in_minutes : "n/a"
%><%= "#{padding}#{@index.to_s.cyan} #{@entry.timestamp.textualize.dark_cyan}" %> <%=icon%> <%= @entry.text.cyan -%><%= 
@partial.call :_tags, :tags => @entry.tags if @entry.respond_to? :tags %>
<% if @details then %>  <%= "Start: #{_start.cyan}".dark_cyan %> <%= "End: #{_end.cyan}".dark_cyan %>
<%= "#{padding*2}Duration: #{duration.cyan}".dark_cyan %>	<%= "Tracked Duration: #{tracked_duration.cyan}".dark_cyan %>
<% end -%>
