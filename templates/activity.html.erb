	<div class="activity, <%= (@entry.activity.foreground) ? 'foreground' : 'background' %>">
		<span class="timestamp"><%= @entry.timestamp.textualize -%>: </span>
		<span class="start_time"><%= @entry.activity.end.textualize if @entry.end -%>: </span>
		<span class="end_time"><%= @entry.activity.end.textualize if @entry.end -%>: </span>
		<span class="text"><%= @entry.text -%></span><% @partial.call :_tags, :tags => @entry.tags if @entry.respond_to? :tags -%>
		<ul>
			<li>Tracking: <em><%= @entry.activity.tracking -%></em></li>
			<li>Duration: <em><%= @entry.activity.duration.in_minutes -%> minutes</em></li>
			<li>Tracked Duration: <em><%= @entry.activity.tracked_duration.in_minutes -%> minutes</em></li>
		</ul>
	</div>
